<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.eva1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EVA1"
        tools:targetApi="31">

        <!-- Declaramos MainActivity como la actividad inicial -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaramos MenuActivity, que es a la que debes ser redirigido después del login -->
        <activity
            android:name=".MenuActivity"
            android:exported="true" />

        <!-- Declaramos WelcomeActivity, que es para el envío de correos -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="false" />

        <!-- Declaramos la actividad de Nuevo Usuario -->
        <activity
            android:name=".NewUserActivity"
            android:exported="false" />


    </application>
</manifest>
